<% @menu_items.each do |menu_item| %>
<div class="card-menu-item col-sm-3">
  <img class="card-img-top" src="http://barcodedc.com/wp-content/gallery/food/healthfitnessrevolution-com.jpg" alt="Card image cap">
  <div class="card-block">
  	<span id="card-price-wrapper"><h4>$ <%= menu_item.price %></h4></span>
    <h4 class="card-title"><%= menu_item.name%></h4>
    <p class="card-text"><%= menu_item.description%></p>
	<div class="card-btn-wrapper">
	    <a href="#" class="btn btn-primary">Details</a>
		<% if show_action and current_user.id == menu_item.user_id %>
			<a href="<%= edit_menu_path(menu_item.id) %>" class="btn btn-info">Edit</a>
			<%= link_to "Delete", menu_path(menu_item), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
		<% end %>
	</div>
  </div>
</div>
<% end %>